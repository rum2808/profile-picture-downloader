{
    "manifest_version": 2,
    "name": "Profile Picture Downloader",
    "version": "1.0.0",
    "description": "Private Profile Picture Viewer",
    "page_action": {
        "default_title": "Download full size profile picture"
    },
    "author": "Nguyen Binh Tay",
    "permissions": [
        "contextMenus",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "https://*.facebook.com/*",
        "https://*.instagram.com/*"
    ],
    "background": {
        "scripts": [
            "contextmenu.js",
            "facebook.js",
            "instagram.js"
        ]
    },
    "homepage_url": "https://github.com/rum2808/profile-picture-downloader",
    "offline_enabled": false,
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}